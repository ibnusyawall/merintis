	<div class="main-content container-fluid">
		<div class="page-title">
			<h3>Dashboard</h3>
			<p class="text-subtitle text-muted">crud aplication with neDB ExpressJS</p>
		</div>
		<section class="section">
			
			<div class="row mb-4">
				<div class="col-md-8">
					<form action="/add" method="post">
						<div class="card">
							<div class="card-header">
								<h3 class='card-heading p-1 pl-3'>Add Data</h3>
							</div>
							<div class="card-body">
								<div class="row">

									<div class="col-md-6">
										<div class="form-group">
											<label for="basicInput">Name</label>
											<input name="name" type="text" class="form-control" id="basicInput">
										</div>
										<div class="form-group">
											<label for="basicInput">Type</label>
											<input name="type" type="text" class="form-control" id="basicInput">
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label for="basicInput">Price</label>
											<input name="price" type="text" class="form-control" id="basicInput">
										</div>
										<div class="form-group">
											<div class="form-group with-title mb-3">
												<textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="1"></textarea>
												<label>Description</label>
											</div>
										</div>
									</div>
									<button type="submit" class="btn btn-outline-info"> add data</button>
								</div>
							</div>
						</div>
					</form>
					<div class="card">
						<div class="card-header d-flex justify-content-between align-items-center">
							<h4 class="card-title">List Data</h4>
							<div class="d-flex ">
								<i data-feather="download"></i>
							</div>
						</div>
						<div class="card-body px-0 pb-0">
							<div class="table-responsive">
								<table class='table mb-0' id="table1">
									
									<thead>
										<tr>
											<th>No</th>
											<th>Name</th>
											<th>Type</th>
											<th>Price</th>
											<th>Description</th>
										</tr>
									</thead>
									<tbody>
										{{#each dataDB}}
										<tr>
											<td>#</td>
											<td>{{ this.name }}</td>
											<td>{{ this.type }}</td>
											<td>
												<span class="badge bg-success">{{ this.price }}</span>
											</td>
											<td>{{ this.description }}</td>
										</tr>
										{{/each}}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-4">
					<div class="card ">
						<div class="card-header">
							<h4>Edit Data</h4>
						</div>
						<div class="card-body">
							<div id="radialBars"></div>
							<div class="text-center mb-5">
								<!-- <h6>From last month</h6> -->
								<a href="/edit/" class="btn icon icon-left btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg> Edit </a>
							</div>
						</div>
					</div>
					<div class="card widget-todo">
						<div class="card-header border-bottom d-flex justify-content-between align-items-center">
							<h4 class="card-title d-flex">
								<i class='bx bx-check font-medium-5 pl-25 pr-75'></i>Delete Data
							</h4>

						</div>
						<div class="card-body px-0 py-1">
							<table class='table table-borderless'>
								{{#each dataDB}}
								<tr>
									<form action="/delete/{{ this._id }}" method="post">
										<td class='col-3'>#</td>
										<td class='col-6'>{{ this.name }}</td>
										<td name="id" class='col-3 text-center'>
											<button type="submit" class="badge bg-warning">Delete</button>
										</td>
									</form>
								</tr>
								{{/each}}
							</table>
						</div>
					</div>
				</div>
			</div>
